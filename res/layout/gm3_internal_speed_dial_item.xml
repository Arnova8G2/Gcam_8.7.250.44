<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="end|center"
    android:orientation="horizontal"
    android:id="@id/mtrl_internal_speed_dial_item"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="4.0dip"
    android:layout_marginBottom="8.0dip"
    android:layout_marginEnd="4.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?android:textColorSecondary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@id/mtrl_internal_speed_dial_item_label"
        android:background="@drawable/mtrl_internal_speed_dial_item_title_background"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:minHeight="30.0dip"
        android:maxLines="1"
        android:textIsSelectable="false" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@id/mtrl_internal_speed_dial_item_fab"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:importantForAccessibility="no"
        app:elevation="@dimen/mtrl_internal_floating_speed_dial_mini_fab_elevation"
        app:pressedTranslationZ="@dimen/mtrl_internal_floating_speed_dial_mini_fab_pressed_translation_z"
        style="?floatingActionButtonSmallStyle" />
</LinearLayout>